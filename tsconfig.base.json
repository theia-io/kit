      "@kitouch/kit-data": ["libs/ui/features/kit/data/src/index.ts"],
      "@kitouch/pages": ["libs/ui/pages/src/index.ts"],
      "@kitouch/shared-models": ["libs/shared/models/src/index.ts"],
      "@kitouch/shared-utils": ["libs/shared/utils/index.ts"],
      "@kitouch/ui-components": ["libs/ui/components/src/index.ts"],
      "@kitouch/ui-shared": ["libs/ui/shared/src/index.ts"],
      "@kitouch/utils": ["libs/shared/utils/src/index.ts"],
      "realm": ["node_modules/realm-web/types/realm"]
    }
  },
  "exclude": ["node_modules", "tmp"]
